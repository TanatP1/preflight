generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Task {
  id        String   @id @default(cuid())
  title     String
  dueDate   DateTime?
  dueTime   DateTime?
  priority  Priority @default(MEDIUM)
  link      String?
  isCompleted Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}